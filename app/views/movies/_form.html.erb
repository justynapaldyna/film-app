    <%= form.file_field :image %>
  </div>

  <div>
  <%= form.label :year, style: "display: block" %>
  <%= form.text_field :year %>
  </div>


  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :movie_length, style: "display: block" %>
    <%= form.text_field :movie_length %>
  </div>

  <div>
    <%= form.label :director, style: "display: block" %>
    <%= form.text_field :director %>
  </div>

  <div>
    <%= form.label :language, style: "display: block" %>
    <%= form.text_field :language %>
  </div>

  <div>
    <%= form.label :rating, style: "display: block" %>
    <%= form.text_field :rating %>
  </div>

  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.select :category_id, options_for_select(@categories.collect{ |cat| [cat.name, cat.id]}) %>
