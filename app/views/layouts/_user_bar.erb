<%= link_to root_path do %>
    <%= image_tag "logo.png", height: '30px' %>
<% end %>

<div class='container'>
<% if current_user %>
    <% if current_user.avatar.persisted? %>
        <%= image_tag current_user.avatar, height: '40px' %>
    <% end %>
    <%= "Logged as #{current_user.login}" %>
    <%= button_to 'Sign out', destroy_user_session_path, method: :delete %>
    <%= button_to 'Profile', user_path(current_user), method: :get %>
    <% if current_user.admin? %>
        <%= button_to 'Admin', admin_path, method: :get  %>
    <% end %>
<% else %>
    <%= link_to 'Sign in', new_user_session_path %>
    <%= link_to 'Register', new_user_registration_path %>
<% end %>
    <%= button_to 'Movies Database', movies_path, method: :get %>
</div>